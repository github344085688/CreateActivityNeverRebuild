<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.home.Therry">

    <RelativeLayout
            android:id="@+id/layout_category_topbar"
            style="@style/TopbarStyle">

        <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="6dp"
                android:src="@drawable/flight_title_back_normal"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="全部订单"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/medium_text_size"/>
    </RelativeLayout>

    <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_middle"
            android:layout_below="@+id/layout_category_topbar">

        <RelativeLayout
                android:id="@+id/layout_order1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="实物订单"
                    android:textColor="@color/red"/>

            <View
                    android:id="@+id/indicator1"
                    android:layout_width="100dp"
                    android:layout_height="2dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <View
                android:layout_width="@dimen/divider_height"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"/>

        <RelativeLayout
                android:id="@+id/layout_order2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="其他订单"
                    android:textColor="@color/dark"/>

            <View
                    android:id="@+id/indicator2"
                    android:layout_width="100dp"
                    android:layout_height="2dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:visibility="invisible"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/item_margin_top"
            android:text="暂无订单，快去挑选商品吧！"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/medium_text_size"/>

</RelativeLayout>