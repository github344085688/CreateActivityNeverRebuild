<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item >
                <shape android:shape="rectangle">
                    <solid android:color="@color/hintColor" />
                </shape>
            </item>
            <item android:top="@dimen/divider_height_middle" android:bottom="@dimen/divider_height_middle">
                <shape android:shape="rectangle">
                    <solid android:color="@color/pressBarBg" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/hintColor" />
                </shape>
            </item>
            <item android:top="@dimen/divider_height_middle" android:bottom="@dimen/divider_height_middle">
                <shape android:shape="rectangle">
                    <solid android:color="@color/lightBg" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>